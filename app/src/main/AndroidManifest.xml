<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.yinyee.locator">

    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".EZLocator"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

         <activity android:name=".Locator">
             <intent-filter>
                 <action android:name="android.intent.action.MAIN" />
                 <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
             <intent-filter>
                 <action android:name="android.intent.action.SCANBARCODE" />
                 <category android:name="android.intent.category.DEFAULT" />
             </intent-filter>
         </activity>

         <activity android:name=".BarcodeReader">
             <intent-filter>
                 <action android:name="android.intent.action.SCANBARCODE" />
                 <category android:name="android.intent.category.DEFAULT" />
             </intent-filter>
         </activity>

         <activity android:name=".MainActivity"></activity>
         <activity android:name=".BarcodeCaptureActivity"></activity>
         <activity android:name=".OcrMainActivity"></activity>
         <activity android:name=".OcrCaptureActivity"></activity>

</application>

</manifest>